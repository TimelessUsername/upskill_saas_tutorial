<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <% if params[:plan] =='2' %>
                <div class="text-center">
                    <h2>Pro Account Sign up</h2>
                    <p>Sign up for the pro account for $10/month and get access to the community and contact information!</p>
                </div>
                <div class="well">
                    <%= render "pro_form" %>
                </div>
            <% else %>
                <div class="text-center">
                    <h2>Basic Account Sign up</h2>
                    <p>Sign up for free and get basic access to the community.</p>
                </div>
                <div class="well">
                    <%= render "basic_form" %>
                </div>
            <% end %>
        </div>
    </div>
</div>
